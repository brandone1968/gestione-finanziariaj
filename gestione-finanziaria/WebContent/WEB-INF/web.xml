<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>com.finanziaria.servlets.Home</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MBSoft</servlet-name>
    <servlet-class>com.finanziaria.servlets.MBSoft</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Fatture</servlet-name>
    <servlet-class>com.finanziaria.servlets.Fatture</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Fattura</servlet-name>
    <servlet-class>com.finanziaria.servlets.Fattura</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>FatturaAdd</servlet-name>
    <servlet-class>com.finanziaria.servlets.FatturaAdd</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Imposte</servlet-name>
    <servlet-class>com.finanziaria.servlets.Imposte</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Statistiche</servlet-name>
    <servlet-class>com.finanziaria.servlets.Statistiche</servlet-class>
  </servlet>
  <filter>
    <filter-name>Set Character Encoding</filter-name>
    <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>ignore</param-name>
      <param-value>false</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>Set Character Encoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MBSoft</servlet-name>
    <url-pattern>/mbsoft</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Fatture</servlet-name>
    <url-pattern>/fatture</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Fattura</servlet-name>
    <url-pattern>/fattura</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FatturaAdd</servlet-name>
    <url-pattern>/fatturaAdd</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Imposte</servlet-name>
    <url-pattern>/imposte</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Statistiche</servlet-name>
    <url-pattern>/statistiche</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>AjaxDatiDitta</servlet-name>
    <servlet-class>com.finanziaria.servlets.AjaxDatiDitta</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AjaxDatiDitta</servlet-name>
    <url-pattern>/ajaxDatiDitta.do</url-pattern>
  </servlet-mapping>
  
  
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
    </jsp-property-group>
  </jsp-config>
</web-app>